---
import Section from "./Section.astro";
---

<Section
    title="Energía solar y Powerwall"
    subtitle="Totalmente eléctrico"
    color="black"
>
    <div slot="footer" class="gap-x-6 lg:flex md:flex mx-auto [&>a]:w-72">
        <a
            class="border-[3px] border-none bg-black/70 text-sm rounded font-medium text-white px-12 py-2 inline-block transition-colors hover:border-gray-500 hover:bg-gray-500"
            href="#"
        >
            Más información
        </a>
    </div>

    <img
        class="object-center object-cover h-full w-full"
        alt="solar panels"
        src="/powerwall.avif"
        slot="background"
    />
</Section>
